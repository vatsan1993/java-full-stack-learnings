node{
	def mvnHome
	stage('Checkout'){
		git url: 'https://github.com/vatsan1993/java-full-stack-learnings/tree/main/java%20projects/spring-web-mvc-demo', branch: 'main'
		mvnHome = tool 'Local Maven'
	}
	
	stage("Build"){
		if(isUnix()){
			sh "'${mvnHome}/bin/mvn'  clean package"
		}else{
			bat(/"${mvnHome}\bin\mvn" clean pacakge/)
		}
	}
}
